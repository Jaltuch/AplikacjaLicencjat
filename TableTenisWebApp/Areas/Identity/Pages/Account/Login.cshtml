@page
@model LoginModel
@{
    ViewData["Title"] = "Logowanie";
}

<div class="container d-flex align-items-center justify-content-center" style="min-height: 80vh;">
    <div class="row w-100 justify-content-center">
        <div class="col-sm-10 col-md-8 col-lg-5">
            <div class="card shadow-sm">
                <div class="card-body p-4 p-md-5">
                    <h1 class="h3 mb-3">@ViewData["Title"]</h1>
                    <p class="text-muted mb-4">Zaloguj się, aby kontynuować.</p>

                    <form id="account" method="post" class="mb-3">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Email">Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-2">
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="••••••••" />
                            <label asp-for="Input.Password">Hasło</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <div class="form-check">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                <label class="form-check-label" asp-for="Input.RememberMe"></label>
                            </div>
                            <a id="forgot-password" class="small" asp-page="./ForgotPassword">Nie pamiętasz hasła?</a>
                        </div>

                        <button id="login-submit" type="submit" class="btn btn-primary w-100">Zaloguj się</button>
                    </form>

                    <div class="text-center">
                        <p class="mb-1">
                            Nie masz konta?
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Zarejestruj się</a>
                        </p>
                        <p class="mb-3">
                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Wyślij ponownie potwierdzenie e-mail</a>
                        </p>
                    </div>

                    @* Logowanie zewnętrzne *@
                    <section>
                        @{
                            if ((Model.ExternalLogins?.Count ?? 0) > 0)
                            {
                                <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                                    <div class="d-grid gap-2">
                                        @foreach (var provider in Model.ExternalLogins!)
                                        {
                                            <button type="submit"
                                                    class="btn btn-outline-secondary"
                                                    name="provider"
                                                    value="@provider.Name"
                                                    title="Zaloguj się przez @provider.DisplayName">
                                                Zaloguj się przez @provider.DisplayName
                                            </button>
                                        }
                                    </div>
                                </form>
                            }
                        }
                    </section>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
