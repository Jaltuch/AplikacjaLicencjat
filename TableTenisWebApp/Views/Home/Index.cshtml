@{
    ViewData["Title"] = "Statystyki ligi";
}

<h1 class="mb-4">Statystyki ligi</h1>

<div class="row">
    <div class="col-md-4 mb-3">
        <div class="card text-center">
            <div class="card-body">
                <h2>@ViewBag.PlayersCount</h2>
                <p class="mb-0">Zawodników</p>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-3">
        <div class="card text-center">
            <div class="card-body">
                <h2>@ViewBag.MatchesCount</h2>
                <p class="mb-0">Meczów rozegranych</p>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-3">
        <div class="card text-center">
            <div class="card-body">
                <h4 class="fw-bold mb-2">Najlepszy zawodnik</h4>
                <p>
                    @ViewBag.BestPlayer
                    <br />
                    <span class="text-muted">Wygrane mecze: @ViewBag.BestPlayerWins</span>
                </p>
            </div>
        </div>
    </div>
</div>
